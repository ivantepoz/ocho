<?xml version="1.0" encoding="UTF-8" ?>
     <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.8"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

 <name>Acelerometro y Geolocalizacion</name>

    <description>
       Aplicacion que muestra los datos del Acelerometro y Geolocalizacion
    </description>

    <preference name="phonegap-version" value="3.1.0" />
	
    <author href="https://build.phonegap.com" email="support@phonegap.com">
      Ivan tepoz gomez
    </author>
	
	<gap:plugin name="org.apache.cordova.device" version="0.2.12" />
	<gap:plugin name="org.apache.cordova.vibration" version="0.3.0" />
	<gap:plugin name="org.apache.cordova.dialogs" version="0.2.6" />
    <!-- colocar estos plugins -->
	<gap:plugin name="org.apache.cordova.geolocation" version="0.3.10" />
	<gap:plugin name="org.apache.cordova.device-motion" version="0.2.10" />
	
	
</widget>
	
    